<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primaryTextTheme1</item>
    </style>
    <style name="tittleSettingsSymbol">
        <item name="android:padding">@dimen/tittle_settings_symbol</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">@dimen/tittle_settings</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tittleSettings">
        <item name="android:padding">@dimen/tittle_settings</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tittle_settings</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>